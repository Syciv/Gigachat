<Page x:Class="Chatt.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chatt.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Grid Background="White" Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding FullName}" FontSize="20" Grid.Row="0" Grid.Column="1"/>
        <TextBlock Text="{Binding Date}" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right"/>
        <Image Source="E:\\gigachad.jpg" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Изменить фото" Template="{StaticResource btTemplate}" Foreground="White" Grid.Row="1" Grid.Column="0"/>
    </Grid>
</Page>
